source 'https://rubygems.org'

gem 'rails', '4.0.2'

gem 'sqlite3'

gem 'sass-rails', '~> 4.0.0'

gem 'jquery-rails'

gem 'turbolinks'

gem 'protected_attributes'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

group :development do
    gem 'rspec-rails'
    gem 'annotate'
end

group :test do
    # gem 'rspec'
    gem 'webrat'
    gem 'factory_girl_rails', '1.0'
end
