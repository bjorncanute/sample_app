<div class="user-info">
	<div class="wrapper">
		<a href="<%= user_path(current_user) %>">
			<%= gravatar_for current_user, :size => 30 %>
			<span class="user-name">
				<%= current_user.name %>
			</span>
			<span class="microposts-count">
				<%= pluralize(current_user.microposts.count, "micropost") %>
			</span>
		</a>
	</div>
</div>