
<% if signed_in? %>

	<div class="home-feed">
		<div class="main">
			<h1 class="micropost-form-header">What's up?</h1>
			<div class="micropost-form">
				<%= render 'shared/micropost_form' %>
			</div>
			<%= render 'shared/feed' %>
		</div>

		<div class="feed-sidebar round">
			<%= render 'shared/user_info' %>
			<%= render 'shared/stats' %>
		</div>
	</div>


<% else %>

	<h1>Sample App</h1>
	<p>
		This is the home page for the <a href="http://railstutorial.org/">Ruby on Rails Tutorial</a> sample application.
	</p>

	<%= link_to "Sign up now!", signup_path, :class => "signup_button round" %>

<% end %>