<div class="profile-wrapper">
	<div class="main">
		<h1>
			<%= gravatar_for @user %>
			<%= @user.name %>
		</h1>

		<% if @user.microposts.any? %>
			<ul class="microposts">
				<%= render @microposts %>
			</ul>
			<%= will_paginate @microposts %>
		<% end %>

	</div>

	<div class="profile-sidebar round">
		<p><span class="label">Name</span> <%= @user.name %></p>
		<p><span class="label">URL</span> <%= link_to user_path(@user), @user %></p>
		<p><span class="label">Microposts</span> <span class="count"><%= @user.microposts.count %></span></p>
	</div>
</div>